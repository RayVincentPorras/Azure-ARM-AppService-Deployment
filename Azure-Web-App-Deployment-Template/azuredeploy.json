{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AppServicePlanNameName": {
      "type": "string",
      "minLength": 1
    },
    "AppServicePlanNameSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ]
    },
    "AppServicePlanLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "allowedValues": [
        "[resourceGroup().location]",
        "australiaeast",
        "australiasoutheast",
        "brazilsouth",
        "centralus",
        "eastasia",
        "eastus",
        "eastus2",
        "japaneast",
        "japanwest",
        "northcentralus",
        "northeurope",
        "southcentralus",
        "southeastasia",
        "westcentralus",
        "westeurope",
        "westus",
        "westus2"
      ]
    },
    "WebAppName": {
      "type": "array",
      "defaultValue": [
        "WebAppName1",
        "WebAppName2"
      ]
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[parameters('AppServicePlanNameName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('AppServicePlanLocation')]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('AppServicePlanNameSkuName')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "AppServicePlanName"
      },
      "properties": {
        "name": "[parameters('AppServicePlanNameName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[parameters('WebAppName')[copyIndex('WebAppCopy')]]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "copy": {
        "name": "WebAppCopy",
        "count": "[length(parameters('WebAppName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('AppServicePlanNameName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('AppServicePlanNameName')))]": "Resource",
        "displayName": "WebAppName"
      },
      "properties": {
        "name": "[parameters('WebAppName')[copyIndex('WebAppCopy')]]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('AppServicePlanNameName'))]"
      }
    }
  ],
  "outputs": {}
  }
